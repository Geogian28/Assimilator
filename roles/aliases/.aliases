alias updatealias='nano ~/.bash_aliases && source ~/.bashrc'
cdl() {
	cd $1 && ls
}
alias ovftool='/usr/bin/vmware-ovftool/ovftool'
alias systemd-resolve='printf "Use resolvectl status instead.\n\nIn systemd 239, systemd-resolve has been renamed to resolvectl.\n\nFor the most part resolvectl offers the same options as systemd-resolve, though they may be named slightly differently. Run resolvectl --help to find what you are looking for.\n"'
alias certufil='certutil'

if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# colored GCC warnings and errors
#export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'

# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias updatealiases='nano ~/.aliases && source ~/.aliases'
alias k='kubectl'
alias kn='_kn'
_kn() {
	if [ -z "$1" ]; then
		echo Sam, enter a namespace.
	else
		kubectl config set-context --current --namespace=$1
	fi
}
